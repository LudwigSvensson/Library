@model BookDTO

@{
    ViewBag.Title = "Delete Book";
}

<div class="row">
    <div class="col-md-7">
        <div class="widget p-5">
            <h1>Delete Book</h1>
            <h3>Are you sure you want to delete the following book?</h3>
            <div class="container border p-3">
                <div class="row">
                    <div class="col-2">
                        <label class="control-label pt-2" style="font-size:20px">Title:</label>
                    </div>
                    <div class="col-10 pb-3">
                        <p class="form-control-plaintext">@Model.Title</p>
                    </div>

                    <div class="col-2">
                        <label class="control-label pt-2" style="font-size:20px">Author:</label>
                    </div>
                    <div class="col-10 pb-3">
                        <p class="form-control-plaintext">@Model.Author</p>
                    </div>

                    <div class="col-2">
                        <label class="control-label pt-2" style="font-size:20px">Release Year:</label>
                    </div>
                    <div class="col-10 pb-3">
                        <p class="form-control-plaintext">@Model.RealeseYear.ToString("yyyy")</p>
                    </div>

                    <div class="col-2">
                        <label class="control-label pt-2" style="font-size:20px">Genre:</label>
                    </div>
                    <div class="col-10 pb-3">
                        <p class="form-control-plaintext">@Model.BookGenre</p>
                    </div>
                </div>
            </div>

            <form asp-action="BookDeleteConfirmed" method="post">
                <input asp-for="BookId" hidden />
                <div class="container border p-3">
                    <div class="row">
                        <div class="col-5">
                            <button type="submit" class="btn btn-outline-primary mb-3">
                                <i class="fa fa-trash"></i> Delete
                            </button>
                            <a asp-action="BookIndex" class="btn btn-outline-primary mb-3">
                                <i class="fa fa-arrow-left"></i> Back to list
                            </a>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <div class="col-md-5">
        <div class="widget h-100 d-flex justify-content-center align-items-center">
            <i class="fa-solid fa-book fa-10x"></i>
        </div>
    </div>
</div>